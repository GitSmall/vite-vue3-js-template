# 很多 IDE 中会默认支持此配置，但是也有些不支持，如：VSCode、Atom、Sublime Text 等。
# 具体列表可以参考官网，如果在 VSCode 中使用需要安装 EditorConfig for VS Code 插件。

# 表示是最顶层的EditorConfig配置文件
root = true

# 表示所有文件适用
[*]

# 缩进风格(tab | space)
indent_style = space
# 控制换行类型(lf | cr | crlf)
end_of_line = lf
# 设置文件字符集为 utf-8
charset = utf-8
# 去除行首的任意空白字符
trim_trailing_whitespace = true
# 始终在文件末尾插入一个新行
insert_final_newline = true

# 表示仅md文件适用以下规则
[*.md]
max_line_length = off
# 去除行首的任意空白字符
trim_trailing_whitespace = false

# 表示仅ts、js、vue、css文件适用以下规则
[*.{ts,js,vue,css}]
indent_size = 2